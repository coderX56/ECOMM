<!-- @format -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<script src="https://cdn.tailwindcss.com"></script>
		<link
			href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
			rel="stylesheet" />
		<title>Cart Page</title>
	</head>
	<body class="bg-gray-100">
		<div class="bg-white shadow-md fixed w-full fixed">
			<div class="flex justify-between items-center h-16 px-10">
				<div class="text-4xl p-2 font-bold text-blue-500">Baggie</div>
				<div class=" flex pr-8">
				<div class="text-2xl font-semibold mt-2">Welcome, <%= user.username %>!</div>
				<div class="bg-gray-300 ml-4 h-12 w-12 rounded-full"><img src=""  ></div>
			</div>
			</div>
		</div>

		<div class="pt-20 px-10">
			<div class="flex gap-5">
				<div class="bg-white p-6 rounded-lg shadow-md flex-1">
					<h2 class="text-3xl font-bold mb-6">Products</h2>
					<% products.forEach((product) => { %>
					<div class="flex mb-8 bg-gray-50 p-4 rounded-lg shadow-sm">
						<div
							class="flex justify-center items-center bg-[<%= product.bgcolor %>] h-52 w-72 rounded-lg overflow-hidden">
							<img
								src="/images/products/<%= product.image %>"
								alt="image"
								class="object-contain h-48" />
						</div>
						<div
							class="flex flex-col justify-between ml-4 p-4 border-l-2 border-gray-200">
							<h3 class="text-3xl font-bold"><%= product.name %></h3>
							<div class="flex items-center text-2xl">
								<span class="line-through">₹<%= product.price %></span>
								<span class="font-bold ml-2">₹<%= product.discount %></span>
							</div>
						</div>
					</div>
					<% }); %>
				</div>

				<div class="bg-white rounded-lg shadow-md w-1/3">
					<div
						class="text-3xl pl-6 pt-3 font-bold  h-14 border-zinc-200 shadow-lg">
						Cart Summary
					</div>
					<div class="p-4">

					<div class="flex justify-between mb-4 ">
						<span class="font-bold text-xl">Subtotal</span>
						<span class="font-semibold text-lg">₹200.00</span>
					</div>
					<div class="flex justify-between mb-4">
						<span class="font-bold text-xl">Shipping</span>
						<span class="font-semibold text-lg">₹15.00</span>
					</div>
					<hr class="mb-2 h-[2px] rounded-full shadow-lg  bg-gray-300" >
					<div class="flex justify-between mb-6">
						<span class="font-bold text-xl">Total:</span>
						<span class="font-semibold text-xl">₹215.00</span>
					</div>
					<button
						class="w-3/4 h-10 ml-14 mt-3 bg-blue-600 text-white text-lg rounded-lg hover:bg-blue-700 transition duration-300">
						Proceed to Checkout
					</button>
				</div>
			</div>
		</div>
	</body>
</html>
