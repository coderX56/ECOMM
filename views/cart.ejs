<!-- @format -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<script src="https://cdn.tailwindcss.com"></script>
		<link
			href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
			rel="stylesheet" />
		<title>Document</title>
	</head>
	<body>
		<div>
			<div
				class="flex gap-20 items-center justify-around h-16 bg-zinc-200 fixed w-screen border-b-1 border-zinc-200">
				<div class="text-5xl font-bold font-mono ml-28 text-blue-600">
					<h1>Baggie</h1>
				</div>

				<div>
					<h1 class="font-semibold text-xl">Welcome <%=user.username%>...</h1>
				</div>
			</div>
			<div class="flex flex-row bg-[#F1F3F6] gap-5 h-full pt-20 px-4 border-1  rounded-xl">
				<div class="bg-zinc-50 h-full w-5/6 shadow-lg border-1 rounded-lg">
					 <% products.forEach((product)=>{%>
					<div class="flex flex-row w-full  gap-5 m-16">
						<div class="bg-[<%=product.bgcolor %>] h-52 w-72"></div>
						<div class="flex flex-col border-1 shadow-md gap-5  h-52 w-1/2 ">
							<h1 class="font-bold text-4xl"><%=product.name %></h1>
							<div class="flex gap-2 text-3xl">
								<h1 class="line-through font-semibold "><%= product.price %>
								<h1 class="font-bold"><%=product.discount %> 	
								</div>
						</div>
					</div>
				   <%})%>  
				</div>
				<div class="bg-white h-96 w-1/3 shadow-lg border-1 rounded-lg"></div>
			</div>
		</div>
	</body>
</html>
